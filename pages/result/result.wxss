/* pages/result/result.wxss */
page{
  width: 100%;
  height: 100%;
  background: #3255e8;
}
.card{
  width: 664rpx;
  height: 960rpx;
  background: #fff;
  margin: 20rpx auto 0;
  border-radius: 18rpx;
  background: radial-gradient(circle at -8rpx 605rpx, transparent 10px,#fff 11px) top left,
            radial-gradient(circle at 340rpx 605rpx, transparent 10px, #fff 11px) right top;
  background-size: 50% 100%;
  background-repeat: no-repeat;
}
.card h1{
  display: block;
  padding: 40rpx 40rpx 15rpx;
  font-size: 36rpx;
  color: #474747;
  border-bottom: 10rpx solid #f9f9f9;
}
.img{
  text-align: center;
  border-bottom: 8rpx solid #f3f3f3;
  height: 490rpx;
  width: 600rpx;
  margin: 0 auto;
}
.img image{
  width: 206rpx;
  height: 206rpx;
  border-radius: 50%;
  border: 1rpx solid #ddd;
  margin: 26rpx 0;
}
.name{
  color: #474747;
  font-size: 26rpx;
}
.num{
  font-size: 48rpx;
  color: #303030;
  margin-top: 50rpx;
}
.percent{
  display: flex;
 
}
.percent>view{
  
  flex:1;
  text-align: center;
  padding-top: 32rpx;
  color: #626262;
  font-size: 30rpx;
}
.percent>view text{
  display: block;
  font-size: 60rpx;
  color: #303030;
  margin-top: 24rpx;
}
.percent .t-left{
  border-right: 6rpx solid #f3f3f3;
}
.card>button{
  color: #fff;
  font-size: 30rpx;
  border-radius: 39rpx;
  height: 78rpx;
  line-height: 78rpx;
  width: 560rpx;
  background: #f66c6c;
  margin-top: 50rpx;
}
.btn-box{
  display: flex;
  margin: 40rpx;
}
.btn-box button{
  width: 302rpx;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 49rpx;
  font-size: 30rpx;
  color: #3e3e3e;
  background: #9ecff6;
}