/* pages/remember/remember.wxss */
.rate{
  padding-left: 30rpx;
  margin-top: 40rpx;
}
.rate text{
  font-size: 28rpx;
  color: #626262;
}
.rate p{
  margin: 0 22rpx;
  width: 400rpx;
  background: #f3f3f3;
  vertical-align: middle;
  position: relative;
}
.rate p,span{
  display: inline-block;
  height: 25rpx;
  border-radius: 13rpx;
}
.rate span{
  background: #ffd656;
  position: absolute;
  top: 0;
  left: 0;
  width: 40%;
}

.card{
  width: 640rpx;
  height: 365rpx;
  margin: 60rpx auto;
  border-radius: 18rpx;
  box-shadow: 0 0 35rpx #ddd;
}
.btns>view{
  width: 520rpx;
  height: 90rpx;
  margin: 0 auto 50rpx;
  position: relative;
}
.btns button{
  width: 100%;
  height: 100%;
  line-height: 90rpx;
  border-radius: 45rpx;
  border: 1rpx solid #ddd;
  font-size:32rpx;
  color: #626262; 
}
.btns button::after{
  border: none;
}

.btns .yes{
  background: #4bb163;
  color: #fff;
}
.btns .no{
  background: #f66c6c;
  color: #fff;
}

.btns image{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -18rpx;
}