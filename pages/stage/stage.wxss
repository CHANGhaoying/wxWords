/* pages/stage/stage.wxss */
page{
  height: 100%;
}
.stage{
  background: #fbfbfb;
  height: 100%;
  padding: 0 55rpx;
}
.nav{
  display: flex;
  flex-wrap: wrap;
  
}
.nav view{
  margin-top: 26rpx;
  width: 33%;
}
.nav button{
  width: 166rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 20rpx;
  color: #aaa;
  padding: 0;
  background:#fbfbfb;
  border-radius: 25rpx; 
  border: 1rpx solid #aaa;
}
.nav button::after{
  border: none; 
}
.section image{
  width: 150rpx;
  height: 130rpx;
  margin-right: 20rpx;
}
.cihui{
  margin-top: 58rpx;
}
.cihui h1,
.cizu h1{
  color: #242424;
  font-size: 32rpx;
}
.cizu h1{
  display: block;
  margin-bottom: 20rpx;
}
.cizu>view,
.cihui>view{
  margin: 12rpx 0 30rpx;
  display: flex;
  border-radius: 12rpx;
  padding: 40rpx 22rpx;
  background: #fff;
  position: relative;
}
.cihui h2,
.cizu h2{
  color: #242424;
  font-size: 30rpx;
  margin-bottom: 6rpx;
}
.cihui p,
.cizu p {
  display: block;
  font-size: 22rpx;
  color: #aaa;
  margin-top: 10rpx;
}

.cihui p text,
.cizu p text{
  padding: 0 18rpx;
  border-left: 1rpx solid #ddd;
}
.cihui p text:first-child,
.cizu p text:first-child{
  padding-left: 0;
  border-left: none;
}
/* 右上角黄色标签样式 */
.section .lable{
  background: #ffd656;
  width: 64rpx;
  height: 72rpx;
  font-size: 20rpx;
  color: #70623e;
  box-sizing: border-box;
  padding-top: 8rpx;
  text-align: center;
  position: absolute;
  right: 38rpx;
  top: -20rpx;
}
.lable span{
  width: 0;
  height: 0;
  border-style: solid;
  position: absolute;
}
.lable span.top{
  border-color: transparent #eeb539 #eeb539 transparent;
  border-width: 10rpx 6rpx;
  left: -10rpx;
  top: 0;
}
.lable span.left{
  border-color: #ffd656 transparent transparent  #ffd656;
  border-width: 5rpx 16rpx;
  bottom: -9rpx;
  left: 0;
}
.lable span.right{
  border-color: #ffd656 #ffd656 transparent transparent  ;
  border-width: 5rpx 16rpx;
  bottom: -9rpx;
  right: 0;
}
