/* pages/allow/allow.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
}
.box{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding-top: 155rpx; 
}

.log{
  width: 165rpx;
  height:165rpx;
  display: block;
  margin: 0 auto 70rpx;
  border-radius: 50%;
}
.txt{
  font-size: 32rpx;
  text-align: center;
}
.allow-btn{
  margin: 200rpx 50rpx 0;
}
.cover{
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,0.2);
  position:absolute;
  top: 0;
}
.pop-out{
  height: 732rpx;
  width: 100%;
  background: #fff;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
  padding: 45rpx 35rpx 0;
}
.top image{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  
}
.top{
  display: flex;
  
}
.top text{
  margin-left: 26rpx;
  height: 100%;
  font-size: 34rpx;
}
.top text:nth-child(2) {
  font-weight: 900;
}
.get{
  margin: 40rpx 0;
  font-size: 50rpx;
  font-weight: 900;
}
.user{
  border-top: 1rpx solid #ddd;
  border-bottom: 1px solid #ddd;
  height: 140rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.user image{
  height: 100rpx;
  width: 80rpx;
  margin: 0 10rpx;
}
.nickname{
  margin-left: 20rpx;
}
.nickname view{
  font-size: 34rpx;
  font-weight: 900;
}
.nickname text{
  font-size: 30rpx;
  color: #ccc;
}
.user icon{
  position: absolute;
  right: 0;
}
.foot{
  display: flex;
  justify-content: space-between;
  margin-top: 120rpx;
}
.foot button{
  width: 310rpx;
  display: inline-block;
  height: 90rpx;
}
.foot button::after{
  border: none;
}
.foot button:first-child{
  background: #ededed;
}
.foot button:last-child{
  background: #07c160;
}